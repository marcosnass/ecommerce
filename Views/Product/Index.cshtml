
@model List<ecommerce.Models.Product>

<h3>@ViewData["Title"]</h3>

@if (Model.Count > 0){

    <table class="table">
    <thead>
        <tr>
        <th scope="col">Nome</th>
        <th scope="col">Tipo</th>
        <th scope="col">Descrição</th>
        <th scope="col">qt Disponível</th>
        <th scope="col">Preço</th>
        </tr>
    </thead>
    <tbody>
        <tr>
        @foreach (var product in Model){
            <tr>
                <td>@product.Name</td>
                <td>@product.Type</td>
                <td>@product.Description</td>
                <td>@product.qtStoque</td>
                <td>R$ @product.Price</td>
                <td>
                    <a asp-controller="Product" asp-action="AddCar" asp-route-id="@product.Id" class="btn btn-success">Adicionar ao carrinho</a>
                </td>
            </tr>
        }
        </tr>
    </tbody>
    </table>
    <a asp-controller="Product" asp-action="UserMaster" class="btn btn-primary">Trocar Usuário</a>
}
else {
    <p>Nenhum produto cadastrado!!!</p>
}